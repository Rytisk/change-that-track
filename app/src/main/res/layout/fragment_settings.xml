<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctt.changethattrack.SettingsFragment">

    <TextView
        android:id="@+id/txtServerIp"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtPort"
        android:layout_marginTop="67dp"
        android:gravity="center_vertical"
        android:text="@string/txtIP"
        android:textAppearance="@android:style/TextAppearance.Medium" />
    <EditText
        android:id="@+id/inServerIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/txtServerIp"
        android:layout_toEndOf="@+id/txtServerIp" />

    <TextView
        android:id="@+id/txtPort"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inServerIP"
        android:layout_marginStart="37dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:text="@string/txtPort"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/inPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtPort"
        android:layout_alignStart="@+id/inServerIP"
        android:ems="7"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtPort"
        android:layout_below="@+id/txtPort"
        android:layout_marginTop="70dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Auto login" />

    <Button
        android:id="@+id/btnSave"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:text="Save" />


</android.widget.RelativeLayout>
